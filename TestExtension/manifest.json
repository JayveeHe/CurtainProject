{
  "manifest_version": 2,
  "name": "ProjectCurtain",
  "description": "少年，射么？",
  "version": "1.0",
  "browser_action": {
    "default_icon": "imgs/icon.png",
    "default_popup": "popup.html",
    "default_title": "点我！"
  },
  "content_scripts": [
    {
      "matches": [
        "http://tv.byr.cn/*"
      ],
      "js": [
        "scripts/jquery-2.1.4.js",
        "scripts/jQuery.md5.js",
        "scripts/shooters.js",
        "scripts/rifleman.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "imgs/icon.jpg",
    "imgs/icon.png"
  ]
}